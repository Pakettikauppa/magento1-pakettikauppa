<?xml version="1.0"?>
<config>
 <modules>
   <Pakettikauppa_Logistics>
     <version>1.0</version>
   </Pakettikauppa_Logistics>
 </modules>
 <global>
  <blocks>
    <logistics>
      <class>Pakettikauppa_Logistics_Block</class>
    </logistics>
  </blocks>
   <models>
     <pakettikauppa_methods>
       <class>Pakettikauppa_Logistics_Model_Methods</class>
     </pakettikauppa_methods>
     <shipping>
       <rewrite>
         <rate_result>Pakettikauppa_Logistics_Model_Rate_Result</rate_result>
       </rewrite>
     </shipping>
     <pakettikauppa_logistics>
       <class>Pakettikauppa_Logistics_Model</class>
       <resourceModel>logistics_resource</resourceModel>
     </pakettikauppa_logistics>
     <logistics_resource>
       <class>Pakettikauppa_Logistics_Model_Resource</class>
       <entities>
         <pickuppoint>
           <table>pakettikauppa_logistics</table>
         </pickuppoint>
       </entities>
     </logistics_resource>
   </models>
   <resources>
     <logistics_setup>
       <setup>
         <module>Pakettikauppa_Logistics</module>
       </setup>
     </logistics_setup>
   </resources>
   <helpers>
     <pakettikauppa_logistics>
       <class>Pakettikauppa_Logistics_Helper</class>
     </pakettikauppa_logistics>
   </helpers>
   <events>
     <sales_order_shipment_save_before>
       <observers>
         <pakettikauppa_logistics_ship_before>
           <type>singleton</type>
           <class>Pakettikauppa_Logistics_Model_Observer</class>
           <method>salesOrderShipmentSaveBefore</method>
         </pakettikauppa_logistics_ship_before>
       </observers>
    </sales_order_shipment_save_before>
    <sales_order_place_before>
      <observers>
          <pakettikauppa_logistics_order_before>
              <type>singleton</type>
              <class>Pakettikauppa_Logistics_Model_Observer</class>
              <method>salesOrderSaveBefore</method>
          </pakettikauppa_logistics_order_before>
      </observers>
  </sales_order_place_before>
 </events>
 </global>
 <default>
   <carriers>
     <pktkp_homedelivery>
       <active>1</active>
       <sallowspecific>0</sallowspecific>
       <model>pakettikauppa_methods/home</model>
       <name>Pakettikauppa Home Delivery</name>
       <price>10.00</price>
       <title>Pakettikauppa Home Delivery</title>
     </pktkp_homedelivery>
     <pktkp_pickuppoint>
       <active>1</active>
       <sallowspecific>0</sallowspecific>
       <model>pakettikauppa_methods/pickup</model>
       <name>Pakettikauppa Pickup Point</name>
       <price>20.00</price>
       <title>Pakettikauppa Pickup Point</title>
     </pktkp_pickuppoint>
   </carriers>
 </default>
 <frontend>
   <routers>
     <checkout>
        <args>
          <modules>
            <pakettikauppa_logistics before="Mage_Checkout">Pakettikauppa_Logistics_Checkout</pakettikauppa_logistics>
          </modules>
        </args>
      </checkout>
       <pakettikauppalogistics>
         <use>standard</use>
         <args>
           <module>Pakettikauppa_Logistics</module>
           <frontName>track</frontName>
         </args>
       </pakettikauppalogistics>
   </routers>
   <layout>
     <updates>
       <pakettikauppa_logistics>
         <file>pakettikauppa/logistics.xml</file>
       </pakettikauppa_logistics>
     </updates>
   </layout>
 </frontend>
 <adminhtml>
    <layout>
      <updates>
        <orderview>
          <file>pakettikauppa/orderview.xml</file>
        </orderview>
      </updates>
    </layout>
      <acl>
        <resources>
          <all>
            <title>Allow Everything</title>
          </all>
          <admin>
            <children>
              <system>
                <children>
                  <config>
                    <children>
                      <pakettikauppa>
                        <title>Pakettikauppa - All</title>
                      </pakettikauppa>
                    </children>
                  </config>
                </children>
              </system>
            </children>
          </admin>
      </resources>
    </acl>
  </adminhtml>
</config>
